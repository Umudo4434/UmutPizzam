@model List<UmutPizzam.Models.Kategoriler>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="w3-container w3-margin-top w3-row">

    <div class="w3-col m6 l6" style="padding-right: 10px;">
        <h2>Kategori Ekle</h2>
        <form action="/Home/AdminSayfa" method="post" class="w3-container w3-card-4 w3-padding w3-light-grey">
            <label class="w3-text-teal"><b>Kategori Adı</b></label>
            <input class="w3-input w3-border w3-round" name="KategoriAd" type="text" maxlength="100" required />
            <button type="submit" name="kateEkle" value="Ekle" class="w3-button w3-teal w3-margin-top">Ekle</button>
        </form>
    </div>

    <div class="w3-col m6 l6" style="padding-left: 10px;">
        <h2>Kategori Sil</h2>
        <form action="/Home/AdminSayfa" method="post"  class="w3-container w3-card-4 w3-padding w3-light-grey" >
            <label class="w3-text-teal"><b>Silinecek Kategoriyi Seç</b></label>
            <select name="KategoriSilId" class="w3-select w3-border w3-round" required>
                <option value="" disabled selected>Kategori Seçiniz</option>
                @foreach (var item in Model)
                {
                    if (item.Aktif == true)
                    {
                        <option value="@item.Id">@item.Ad</option>
                    }
                }
            </select>
            <button type="submit" name="KategoriSil" value="Sil" class="w3-button w3-red w3-margin-top">Sil</button>
        </form>
    </div>
</div>
<table>
    <tr>
        <th>Kategori Ad</th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.Aktif == true)
        {
            <tr>
                <td>@item.Ad</td>
            </tr>
        }
    }
</table>
<style>
    table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin-top: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    th, td {
        padding: 12px 20px;
        text-align: left;
    }

    th {
        background-color: #4CAF50;
        color: white;
        font-size: 1.1rem;
    }

    tr:nth-child(even) {
        background-color: #f3f3f3;
    }

    tr:hover {
        background-color: #d1e7dd;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
</style>

