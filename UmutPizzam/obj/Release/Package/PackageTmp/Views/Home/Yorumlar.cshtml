@model UmutPizzam.DataModel.Class1
@{
    ViewBag.Title = "Yorumlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <h2 class="text-center mb-4" style="color:white">Musteri Yorumlari</h2>

    <div class="row">
        @foreach (var item in Model.Yorumlars.OrderByDescending(x => x.Id))
        {
            if (item.Aktif == true)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">&#128100; @item.KullaniciAdi</h5>
                            <div class="menu mb-3">
                                <h6 class="card-subtitle mb-2 text-muted">Menu : @item.Menuler.Ad </h6>
                            </div>
                            <h6 class="card-subtitle mb-2 text-muted">&#9993; @item.Icerik</h6>
                            <p class="card-text mt-3"></p>
                            <p class="text-end text-secondary mb-0"><small>&#128340; @item.YorumTarihi</small></p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
