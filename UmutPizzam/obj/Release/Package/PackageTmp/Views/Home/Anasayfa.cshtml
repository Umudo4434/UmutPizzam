@model List<UmutPizzam.Models.Menuler>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Anasayfa";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

@{
    var filteredItems = Model.Where(x => x.AktifMi == true && x.KategoriId == 1).ToList();
    int totalSlides = (int)Math.Ceiling(filteredItems.Count / 3.0);
}

<h1 align="center" style="color:white">UmutPizzam Güzel Pizzam!</h1>
<div id="umutCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">

    <div class="carousel-indicators">
        @for (int i = 0; i < totalSlides; i++)
        {
            <button type="button" data-bs-target="#umutCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i+1)"></button>
        }
    </div>

    <div class="carousel-inner">
        @{
            int slideIndex = 0;
            for (int i = 0; i < filteredItems.Count; i += 3)
            {
                var itemsGroup = filteredItems.Skip(i).Take(3).ToList();
                <div class="carousel-item @(slideIndex == 0 ? "active" : "")">
                    <div class="d-flex justify-content-center">
                        @foreach (var item in itemsGroup)
                        {
                            <div class="card mx-2" style="width: 18rem; background-color:#333; color:white;">
                                <div class="card-img-top" style="background-image: url(@item.ResimUrl); background-size: cover; background-position: center; height: 180px;"></div>
                                <div class="card-body text-center">
                                    <h5 class="card-title">@item.Ad</h5>
                                    <p class="card-text">@item.Aciklama</p>
                                    <a href="/Home/Menu" class="btn btn-primary">Detaylar</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                slideIndex++;
            }
        }
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#umutCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon bg-dark rounded-circle" aria-hidden="true"></span>
        <span class="visually-hidden">Önceki</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#umutCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon bg-dark rounded-circle" aria-hidden="true"></span>
        <span class="visually-hidden">Sonraki</span>
    </button>
</div>




<section class="container mt-5">
    <h2 class="text-center text-white mb-4">Sicak Lezzetler Sizi Bekliyor</h2>
    <p class="text-center text-white">Umut Pizzam, Keciborlu'da taze malzemelerle hazirlanan pizzalariyla hizla buyuyen bir lezzet duragidir. Hedefimiz, en kaliteli pizzayi uygun fiyatlarla sunmak ve sizlere unutulmaz bir deneyim yasatmaktir.</p>
</section>

<section class="container mt-5">
    <h2 class="text-center text-white mb-4">Lezzetli Seceneklerimiz</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg">
                <img src="~/Content/img/bg_1.png" class="card-img-top" alt="Pizza">
                <div class="card-body text-center">
                    <h5 class="card-title">Pizza</h5>
                    <p class="card-text">En taze malzemelerle hazirlanmis pizzalarimizi kesfedin!</p>
                    <a href="/Home/Menu" class="btn btn-danger">Menuye Git</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-lg">
                <img src="~/Content/img/ayranpng.png" class="card-img-top" alt="Icecek">
                <div class="card-body text-center">
                    <h5 class="card-title">Icecekler</h5>
                    <p class="card-text">Pizza ile mukemmel uyum saglayan soguk icecekleri kesfedin!</p>
                    <a href="/Home/Menu" class="btn btn-danger">Menuye Git</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-lg">
                <img src="~/Content/img/extraresim.png" class="card-img-top" alt="Extra">
                <div class="card-body text-center">
                    <h5 class="card-title">Ekstralar</h5>
                    <p class="card-text">Lezzetli soslar ve ekstra malzemelerle pizzanizi daha da ozel hale getirin!</p>
                    <a href="/Home/Menu" class="btn btn-danger">Menuye Git</a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .carousel-item > .d-flex > .card {
        flex: 1 0 0;
        max-width: 30%;
    }

    .card-img-top {
        border-radius: 10px 10px 0 0;
    }

    #umutCarousel {
        padding-bottom: 60px;
    }

        #umutCarousel .carousel-item > .d-flex > .card {
            flex: 0 0 auto;
            width: 300px;
            height: 420px;
            margin: 0 10px;
            background-color: #333;
            color: white;
            border-radius: 10px;
            overflow: hidden;
        }

        #umutCarousel .card-img-top {
            height: 220px;
            background-size: cover !important;
            background-position: center !important;
            border-radius: 10px 10px 0 0;
        }

        #umutCarousel .card-body {
            height: 180px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: center;
        }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: rgba(0,0,0,0.5);
        border-radius: 50%;
    }
</style>